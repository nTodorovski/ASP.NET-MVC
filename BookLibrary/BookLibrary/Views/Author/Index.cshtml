@model  BookLibrary.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "Index";
}
<br />
<div class="container">
    <br />
    <a asp-action="Create" asp-controller="Author" class="btn btn-primary">Add Author</a>
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Age</th>
                <th>Books</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var author in Model.AllAuthors)
                {
                        <tr>
                            <td>@author.GetFullName()</td>
                            <td>@author.Age</td>
                            <td>
                                <ol>
                                    @{foreach (var book in Model.AllBooks.Where(x => x.Author == author))
                                        {
                                            <li>@book.Name</li>
                                        }
                                    }
                                </ol>
                            </td>
                            <td><a asp-action="Details" asp-controller="Author" asp-route-id="@author.Id">Details</a> | <a asp-action="Edit" asp-controller="Author" asp-route-id="@author.Id">Edit</a> | <a asp-action="Delete" asp-controller="Author" asp-route-id="@author.Id">Delete</a></td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>